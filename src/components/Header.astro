---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink, Link } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <Link href="/">Home</Link>
    </li>
    <li class="menu-item">
      <Link href="/map-view/">Map View</Link>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">
        List View by Neighborhood
        <Icon aria-hidden="true" name="lucide:chevron-down" size="32" />
      </button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <Link href="/list-view-center-city/">Center City</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view-north/">North Philly</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view-northeast/">Northeast Philly</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view-northwest/">Northwest Philly</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view-south/">South Philly</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view-southwest/">Southwest Philly</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view-west/">West Philly</Link>
        </li>
        <li class="submenu-item">
          <Link href="/list-view/">View full list</Link>
        </li>
      </ul>
    </li>
    <li class="menu-item">
      <Link href="/contact/">Contact</Link>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
